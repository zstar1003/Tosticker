{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "MindFlow",
  "version": "0.1.0",
  "identifier": "com.mindflow.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "MindFlow",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "default",
          "windows": ["*"],
          "permissions": [
            "core:default",
            "sql:default",
            "sql:allow-execute",
            "notification:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app", "msi", "appimage", "deb"],
    "category": "Productivity",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "signingIdentity": null,
      "entitlements": null
    },
    "iOS": {
      "developmentTeam": null,
      "minimumSystemVersion": "13.0"
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:mindflow.db"]
    }
  }
}
