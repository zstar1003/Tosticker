{
  "name": "tosticker-todo",
  "version": "0.1.1",
  "description": "吐司便签 - 桌面便签待办应用",
  "author": "ToSticker Team",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite",
    "build": "bunx --bun tsc && bunx --bun vite build",
    "preview": "bunx --bun vite preview",
    "tauri": "bunx --bun tauri",
    "tauri:dev": "bunx --bun tauri dev",
    "tauri:build": "bunx --bun tauri build",
    "tauri:android:dev": "bunx --bun tauri android dev",
    "tauri:ios:dev": "bunx --bun tauri ios dev",
    "tauri:android:build": "bunx --bun tauri android build",
    "tauri:ios:build": "bunx --bun tauri ios build",
    "icon:generate": "cd src-tauri && bunx --bun tauri icon ../public/icon.svg",
    "setup": "bun install && bun run icon:generate",
    "start": "bun run tauri:dev",
    "clean": "rm -rf dist node_modules .bun-cache src-tauri/target src-tauri/gen",
    "typecheck": "bunx --bun tsc --noEmit",
    "lint": "bunx --bun eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-dialog": "^2.0.0",
    "@tauri-apps/plugin-fs": "^2.0.0",
    "@tauri-apps/plugin-notification": "^2.0.0",
    "@tauri-apps/plugin-sql": "^2.0.0",
    "date-fns": "^3.6.0",
    "lucide-react": "^0.400.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.0.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.0.2",
    "vite": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
